<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.duanzi.model.data.Data"/>
        <variable
            name="data"
            type="Data" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                app:cUrl="@{data.profile_image}"
                android:id="@+id/header"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
            <TextView
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center"
                android:text="@{data.name}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:paddingStart="12dp"
            android:paddingEnd="12dp"

            android:paddingBottom="8dp"
            android:id="@+id/content"
            android:text="@{data.text}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:clickable="true"
                    android:background="@drawable/ripple_thumb"
                    android:id="@+id/thumb"
                    android:padding="3dp"
                    android:src="@drawable/love"
                    android:layout_width="26dp"
                    android:layout_height="26dp"/>
                <TextView
                    android:layout_marginStart="4dp"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:text="@{String.valueOf(data.love)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:clickable="true"
                    android:background="@drawable/ripple_thumb"
                    android:id="@+id/hate"
                    android:padding="3dp"
                    android:src="@drawable/heat"
                    android:layout_width="26dp"
                    android:layout_height="26dp"/>
                <TextView
                    android:layout_marginStart="4dp"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:text="@{String.valueOf(data.hate)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="1dp"
                    android:src="@drawable/comment"
                    android:layout_width="22dp"
                    android:layout_height="22dp"/>
                <TextView
                    android:layout_marginStart="4dp"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:text="@{String.valueOf(data.comment)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/share"
                    android:layout_width="22dp"
                    android:layout_height="22dp"/>
                <TextView
                    android:padding="1dp"
                    android:layout_marginStart="4dp"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:text="@{String.valueOf(data.repost)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
